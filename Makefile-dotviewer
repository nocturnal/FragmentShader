C_FLAGS     = -mthreads -g -O3 -DWXUSINGDLL -D__WXMSW__ -I$(WX_TOP)/lib/wx/include/msw-ansi-release-2.8 -I$(WX_TOP)/include -I$(LUA_TOP)/src
LN_FLAGS    = -mthreads    -L/x/tech/Users/macton/wxWidgets/lib -mwindows  -lwx_msw_propgrid-2.8 -lrpcrt4 -loleaut32 -lole32 -luuid -lwinspool -lwinmm -lshell32 -lcomctl32 -lcomdlg32 -lctl3d32 -ladvapi32 -lwsock32 -lgdi32 -lwx_msw_core-2.8  -lwx_base-2.8   -lwxtiff-2.8 -lwxjpeg-2.8 -lwxpng-2.8  -lwxzlib-2.8  -lwxregex-2.8 -lwxexpat-2.8 -mthreads  -lrpcrt4 -loleaut32 -lole32 -luuid -lwinspool -lwinmm -lshell32 -lcomctl32 -lcomdlg32 -lctl3d32 -ladvapi32 -lwsock32 -lgdi32  


